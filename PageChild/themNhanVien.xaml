<Window x:Class="DuAn_QuanLiKhachSan.PageChild.themNhanVien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DuAn_QuanLiKhachSan.PageChild"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="themNhanVien"
        Height="500" Width="980" WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border Background="{DynamicResource SecundaryBackgroundColor}"  CornerRadius="20" BorderThickness="2" BorderBrush="#7f7cf1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="350"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,8,0" Height="30" Orientation="Horizontal" FlowDirection="RightToLeft">
                <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton"/>
                <Button x:Name="btnMinimize" Style="{DynamicResource IconButtonsStyle}" Content="{DynamicResource minimize}" Click="btnMinimize_Click"/>
            </StackPanel>

            <TextBlock Grid.Row="1" Text="THÊM NHÂN VIÊN MỚI" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="220"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <Label Content="MÃ NHÂN VIÊN" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                        <TextBox x:Name="txt_MaNV" Tag="Mã nhân viên tự động" Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" Width="300" FontSize="15" IsEnabled="False" Foreground="{DynamicResource PrimaryTextColor}"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="TÊN NHÂN VIÊN" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                            <fa:IconImage Icon="User" Style="{DynamicResource Icon}"/>
                        </StackPanel>
                        <TextBox x:Name="txt_TenNV" Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" Width="300" FontSize="15" Foreground="{DynamicResource PrimaryTextColor}"/>

                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="GIỚI TÍNH" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                            <fa:IconImage Icon="Genderless" Style="{DynamicResource Icon}"/>
                        </StackPanel>
                        <StackPanel x:Name="radio_Phai" Orientation="Horizontal">
                            <RadioButton x:Name="radio_Nam" Content="Nam" FontWeight="Bold" FontSize="14" Margin="10 4" Foreground="{DynamicResource PrimaryTextColor}"/>
                            <RadioButton x:Name="radio_Nu" Content="Nữ" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="CĂN CƯỚC CÔNG DÂN" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                            <fa:IconImage Icon="ContactCard" Style="{DynamicResource Icon}"/>
                        </StackPanel>
                        <TextBox x:Name="txt_CCCD" Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" Width="300" FontSize="15" Foreground="{DynamicResource PrimaryTextColor}" TextChanged="txt_CCCD_TextChanged" />
                        <TextBlock x:Name="errorCCCD" FontSize="10" Foreground="Red"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="EMAIL" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                            <fa:IconImage Icon="MailBulk" Style="{DynamicResource Icon}"/>
                        </StackPanel>
                        <TextBox x:Name="txt_Email" Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" Width="300" FontSize="15" Foreground="{DynamicResource PrimaryTextColor}" LostFocus="txt_Email_LostFocus"  />
                        <TextBlock x:Name="errorEmail" FontSize="10" Foreground="Red"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Column="1">
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="SỐ ĐIỆN THOẠI" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                            <fa:IconImage Icon="Phone" Style="{DynamicResource Icon}"/>
                        </StackPanel>
                        <TextBox x:Name="txt_SDT" Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" Width="300" FontSize="15" Foreground="{DynamicResource PrimaryTextColor}" TextChanged="txt_SDT_TextChanged" />
                        <TextBlock x:Name="errorSDT" Foreground="Red"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="NGÀY SINH" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                            <fa:IconImage Icon="CalendarDay" Style="{DynamicResource Icon}"/>
                        </StackPanel>
                        <DatePicker x:Name="txt_NgaySinh" Style="{DynamicResource MaterialDesignOutlinedDatePicker}" HorizontalAlignment="Left" Width="300" FontSize="15" Padding="5" Foreground="{DynamicResource PrimaryTextColor}"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="ĐỊA CHỈ" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                            <fa:IconImage Icon="LocationDot" Style="{DynamicResource Icon}"/>
                        </StackPanel>
                        <TextBox x:Name="txt_DiaChi" Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" Width="300" FontSize="15" Foreground="{DynamicResource PrimaryTextColor}" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="CHỨC VỤ" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                            <fa:IconImage Icon="UserPlus" Style="{DynamicResource Icon}"/>
                        </StackPanel>
                        <ComboBox x:Name="txt_ChucVu" HorizontalAlignment="Left" Width="300" FontSize="15" Height="32" Foreground="{DynamicResource PrimaryTextColor}" Style="{DynamicResource ComboBoxFlatStyle}">
                            <ComboBoxItem Content="Nhân Viên"/>
                            <ComboBoxItem Content="Quản Lý"/>
                            <ComboBoxItem Content="Lễ Tân"/>
                            <ComboBoxItem Content="Dịch Vụ"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="MẬT KHẨU" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                            <fa:IconImage  Style="{DynamicResource Icon}"/>
                        </StackPanel>
                        <TextBox x:Name="txt_MatKhau" Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" Width="300" FontSize="15" Foreground="{DynamicResource PrimaryTextColor}" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <Button x:Name="bt_ChonAnh" Style="{DynamicResource MainBtn}" Content="CHỌN ẢNH" VerticalContentAlignment="Center"   FontWeight="Bold" FontSize="14" Click="bt_ChonAnh_Click"   />
                    <Border x:Name="img" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" CornerRadius="6" Margin="30 10 30 0"  Height="180">
                        <Image Name="ImageViewer" HorizontalAlignment="Center" Stretch="UniformToFill"/>
                    </Border>
                </StackPanel>
            </Grid>
            <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0 0 20 0">
                <Button x:Name="bt_Luu" Content="Lưu" Style="{DynamicResource MainBtn}" Click="bt_Luu_Click"/>
                <Button x:Name="bt_Xoa" Content="Xóa" Style="{DynamicResource MainBtn}" Click="bt_Xoa_Click"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
